workspace 'Suto Stream.xcworkspace'

# Uncomment this line to define a global platform for your project
platform :ios, '8.0'

target 'Suto Stream' do
  # project './Suto Stream.xcodeproj'
  # Comment this line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  #reactive
  pod 'ReactiveCocoa', '~> 4.1'

  # placeholder
  pod 'LoremIpsum', '~> 1.0'

  # auto layout
  pod 'PureLayout'
  
  # controls
  pod 'FlowSlideMenu'
  pod 'AMSlideMenu', '~> 1.5.4'
  pod 'DualSlideMenu'
  pod 'MSDynamicsDrawerViewController'
  pod 'MMDrawerController', '~> 0.5.7'
  pod 'BFPaperButton'
  pod 'SRKControls', '~> 3.0.1'
  
  # for m3u8 parse
  # pod 'M3U8Kit2'
  
  # pod 'Player'
  pod 'MobilePlayer'
  # pod 'DFVideoPlayer'
  

  #extension for alamofire
  #pod 'AlamofireObjectMapper', '~> 3.0'

  #dependency injection
  pod 'Swinject'

  #image cache and download
  pod 'Kingfisher', '~> 2.4'
  pod 'SDWebImage', '~>3.7'

  #empty list view handler
  pod 'DZNEmptyDataSet'

  #loading indicator
  pod 'SVProgressHUD'

  #animation
  pod 'Spring', :git => 'https://github.com/MengTo/Spring.git', :branch => 'swift2'

  use_frameworks!

  # Pods for ApiClient
  #networking
  pod 'Alamofire'
  pod 'AlamofireObjectMapper'

  #json handler
  pod 'ObjectMapper', '~> 1.3'
  pod 'SwiftyJSON', :git => 'https://github.com/SwiftyJSON/SwiftyJSON.git'

  #core data
  pod 'SugarRecord'

  target 'Suto StreamTests' do
    inherit! :search_paths
    # Pods for testing
      pod 'Nimble'
      pod 'Quick'
  end

  target 'Suto StreamUITests' do
    inherit! :search_paths
